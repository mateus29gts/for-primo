 Scanner in = new Scanner (System.in);
    int numero = 0;
    int divisores = 0;
    System.out.println("DIGITE UM NUMERO");
    numero = in.nextInt();
    for (int i =2; i<numero-1; i++){ // variavel i começamndo em 2 pois eu decidir, condição vai até o numero menos 1, t´po 39 se o numero for 40, i++ sempre pra aumentar 1 ate a ondição for falso.
         
    if (numero % i == 0){
        divisores++;
            break; // parar.
         }
    }
    
    if(divisores>0){
        System.out.println("Ele não é primo");
    }
    else{ 
        System.out.println("ele é primo");
    }
    }
